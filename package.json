{
  "name": "emma",
  "description": "Emma Camp√°s website",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "author": {
    "name": "Diego Caponera",
    "email": "hello@diegocaponera.com",
    "url": "https://www.diegocaponera.com"
  },
  "scripts": {
    "start": "npx concurrently 'npm run dev:site' 'npm run dev:client'",
    "build": "npm run build:site && npm run build:client",
    "dev:client": "parcel 'output/**/*.html'",
    "dev:site": "npx nodemon -e js,json,md,handlebars --watch data --watch src --watch index.js",
    "build:client": "parcel build output/*.html",
    "build:site": "node index.js",
    "clean": "rm -rf dist output",
    "rosette": "npx nodemon rosette.js"
  },
  "dependencies": {
    "motion": "^12.23.24"
  },
  "devDependencies": {
    "goffre": "^0.0.3",
    "lodash": "^4.17.21",
    "marked": "^17.0.0",
    "parcel": "^2.16.1",
    "sharp": "^0.33.5"
  }
}
