<section class="section dates" id="dates">
  <div class="container">
    <div class="content">
      <h1>{{ title }}</h1>
      {{{content}}}
      <ul class="dates-list">
        {{#each dates}}
        <li>
          <time datetime="{{date}}">{{formatDate date @root.language}}</time>
          <span>{{description}}</span>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>
</section>
